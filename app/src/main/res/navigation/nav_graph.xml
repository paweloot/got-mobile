<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mtnRangeFragment">

    <fragment
        android:id="@+id/mtnRangeFragment"
        android:name="com.paweloot.gotmobile.mtnrange.MtnRangeFragment"
        android:label="fragment_mtn_range"
        tools:layout="@layout/fragment_mtn_range">
        <action
            android:id="@+id/openMtnGroupFragment"
            app:destination="@id/mtnGroupFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mtnGroupFragment"
        android:name="com.paweloot.gotmobile.mtngroup.MtnGroupFragment"
        android:label="MtnGroupFragment" />
</navigation>